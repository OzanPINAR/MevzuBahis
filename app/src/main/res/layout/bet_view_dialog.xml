<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="60dp"
        android:text="Match" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="Due to:"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/tv_match"
        android:layout_alignLeft="@+id/tv_match"
        android:layout_alignStart="@+id/tv_match" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coin_amount"

        android:text="Sent By:" />

    <TextView
        android:id="@+id/bet_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="TextView"
        android:layout_below="@+id/coin_amount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp" />

    <TextView
        android:id="@+id/coin_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:drawableLeft="@drawable/coins24"
        android:drawableStart="@drawable/coins24"
        android:text="TextView" />

</RelativeLayout>